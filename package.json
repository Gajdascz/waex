  "license": "GPL-3.0-only",
  "type": "module",
  "devDependencies": {
    "@eslint/compat": "^1.1.0",
    "@eslint/js": "^9.6.0",
    "@types/luxon": "^3.4.2",
    "@types/node": "^20.14.10",
    "eslint": "^9.6.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsdoc": "^48.7.0",
    "prettier": "^3.3.2",
    "tsx": "^4.16.2",
    "typedoc": "^0.26.4",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.16.0",
    "vitest": "^2.0.3",
    "globals": "^15.8.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "chokidar": "^3.6.0",
