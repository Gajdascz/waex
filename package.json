{
  "name": "waex",
  "description": "Watches for file changes and executes commands.",
  "version": "0.1.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">= 20.13.1",
    "npm": ">=10.8.1"
  },
  "scripts": {
    "test": "vitest",
    "watch": "tsx ./src/index.ts",
    "format": "prettier --write ./",
